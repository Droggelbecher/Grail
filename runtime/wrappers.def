class Actor {
  ctor()
  void addAnimation(string, Animation&)
  void setMode(string)
  void setPosition(VirtualPosition)
  void walkStraight(VirtualPosition)
}

class Game {
  void runChapter(lua_Integer)
  Viewport& getViewport()
  void goToScene(Scene&)
  ResourceManager& getResourceManager()
  void setUserInterface(UserInterface&)
  UserInterface& getUserInterface()
}

class Viewport {
  ctor()
  void setup(lua_Number, lua_Number, bool)
  void setCameraPosition(VirtualPosition)
  void keepCentering(Actor&)
}

class Scene {
  ctor()
  void setBackground(Animation&)
  void addActor(Actor&)
}

class Image {
  ctor(string)
}

class StripeSprite {
  ctor(string, lua_Integer)
}

class DirectionAnimation {
  ctor(lua_Integer)
  void setDirection(lua_Integer)
  void setAnimation(lua_Integer, Animation*)
}


